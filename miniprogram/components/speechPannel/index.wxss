.speech_cover_img {
  width: 100%;
  position: relative;
}

.speech_cover_img image {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius: 4px;
}

.play_icon {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play_icon image {
  width: 90rpx;
  height: auto;
  display: block;
}

.play_icon_avatar {
  width: 140rpx;
  position: absolute;
  top: 180rpx;
  right: 180rpx;

}

.play_icon_time {
  width: 336rpx;
  overflow: hidden;
  position: absolute;
  left: 64rpx;
  top: 180rpx;
  color: #6b6b6b;
  font-size: 22rpx;
}

.play_icon_title {
  color: #aea24e;
  position: absolute;
  top: 64rpx;
  left: 64rpx;
  width: 336rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  font-size: 36rpx;
  line-height: 36rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.play_icon_avatar image {
  width: 50%;
  height: auto;
  display: block;
  border-radius: 50%;
  margin: 0 auto;

}

.play_icon_nick_name {
  font-size: 22rpx;
  color: #6b6b6b;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  line-height: 22rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
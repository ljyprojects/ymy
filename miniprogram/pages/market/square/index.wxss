
@import "../../../template/marketFootMenu/marketFootMenu.wxss";

.market_page {
  position: relative;
}

.market_body {
  padding-bottom: 100rpx;
}

.top_tab {
  background-color: #fff;
}

video {
  width: 100%;
}

.cover {
  min-height: 92px;
  background-color: rgb(39, 65, 99);
}

.cover image {
  width: 100%;
  height: auto;
  display: block;
}

.admin-delete {
  color: red;
  padding-left: 20rpx;
}

.li-imgs {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 8rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.circle {
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ececec;
  font-family: Arial, sans-serif;
  background-color: #fff;
}

.msg_cover {
  width: 100%;
  height: 100%;
}

.default {
  width: 100%;
}

.default image {
  width: 60%;
  height: auto;
  display: block;
  margin: 0 auto;
}

.default .default_text {
  text-align: center;
  font-size: 26rpx;
  margin-top: 10px;
  color: #6b6b6b;
}

.list {
  width: 100%;
}

.item .content .name {
  color: #576b95;
  font-size: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  overflow: hidden;
  margin-top: -10rpx;
  font-weight: bolder;
}

.item .content .doc {
  height: 110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.item .content .doc .img {
  width: 80rpx;
  height: 80rpx;
}

.doc .img>image {
  width: 100%;
  height: 100%;
}

.doc .title {
  margin-left: 30rpx;
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 30rpx;

}

.timebox {
  margin-top: 15rpx;
  display: flex;

  font-size: 26rpx;
  color: #888;
}

.content .time {
  font-size: 26rpx;
  color: #aaa;
}

.time.color {
  color: #f88070;
  margin-left: 30rpx;
}

.txt.download {
  float: right;
  color: #00bf00;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.col {
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
}

.article {
  display: flex;
  flex-direction: row;
  padding: 6rpx;
  align-content: center;
  padding-bottom: 6rpx;
  background-color: #f7f7f7;
  align-items: center;
}

.article-title {
  font-size: 24rpx;
}

.msg_cover-imagebox {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
  overflow: hidden;
}

.noData {
  width: 100%;
  height: calc(100% - 100rpx - 183rpx);
}

.content {
  font-size: 28rpx;
  font-family: Arial, sans-serif;
  overflow: hidden;
  color: #252525;

}

.timeArea {
  color: #888;
  padding-top: 20rpx;
  position: relative;
  display: flex;
  font-size: 26rpx;
  align-items: center;

}

.timeArea text {
  font-size: 26rpx;
}

.sync_file {
  flex: 1;
  text-align: right;
  margin-left: 30rpx;
  color: #00b26a;
}

.communityPage-li-imgli-none,
.li-imgs {
  position: relative;
}

.play_icon {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;

}

.play_icon_avatar {
  width: 140rpx;
  position: absolute;
  top: 200rpx;
  right: 210rpx;

}

.play_icon_time {
  width: 336rpx;
  overflow: hidden;
  position: absolute;
  left: 64rpx;
  top: 180rpx;
  color: #6b6b6b;
  font-size: 22rpx;
}

.play_icon_title {
  color: #aea24e;
  position: absolute;
  top: 64rpx;
  left: 64rpx;
  width: 336rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  font-size: 36rpx;
  line-height: 36rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.play_icon_avatar image {
  width: 50%;
  height: auto;
  display: block;
  border-radius: 50%;
  margin: 0 auto;

}

.play_icon_nick_name {
  font-size: 22rpx;
  color: #6b6b6b;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  line-height: 22rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.submit_btn {
  width: 100rpx;
  height: 100rpx;
  cursor: pointer;
  position: fixed;
  bottom: 140rpx;
  right: 10rpx;
  z-index: 1;
  border-radius: 50%;
  overflow: hidden;
  transition: all .5s;
  background-color: #fff;
}

.submit_btn.hide {
  right: -100rpx;
}

.submit_btn .submit_img {
  width: 100%;
  height: auto;
  display: block;
}

.half {
  z-index: 10;
  background-color: rgba(0, 0, 0, .2);
  height: 100vh;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.half .black {
  width: 100%;
  height: 50vh;
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, .5);
}

.half .checkbox {
  flex: 1;
  text-align: right;
  align-content: center;
}

.half .checkbox>image {
  width: 50rpx;
  height: 50rpx;
}

.half .list {
  width: 100%;
  height: 50vh;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: auto;
  box-sizing: border-box;
  padding: 10rpx;
  background-color: #fff;

}

.half .send {
  padding: 5rpx 30rpx;
  color: #fff;
  border-radius: 5rpx;
  background-color: #00b26a;
  position: absolute;
  right: 10rpx;
  bottom: calc(50vh + 10rpx);

}

.list-item {
  display: flex;
  align-items: center;
}

.list .img {
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
}

.list .img>image {
  width: 100%;
  height: 100%;
}

.list .content .name {
  font-weight: bold;
}

.list .content .time {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.read_title {
  font-size: 28rpx;
  color: #333;
}

.read_content {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}


.doc_list_item {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx 20rpx 20rpx;
  background-color: #fff;
  position: relative;
}

.doc_list_item_icon {
  width: 70rpx;
  margin-right: 20rpx;
}

.doc_list_item_icon image {
  width: 100%;
  height: auto;
  display: block;
}

.doc_list_item .doc_list_item_title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.txt.synchronous {
  flex: 1;
  text-align: right;
  margin-left: 30rpx;
  color: #00b26a;
}
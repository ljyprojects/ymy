/* pages/mine/setting/index.wxss */
page {
  background-color: #f6f6f6;
}

.menu_list_item {
  padding: 20rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #6b6b6b;
}

.menu_list_item_title {
  width: 120rpx;
}

.menu_list_item_value {
  flex: 1;
  padding-left: 20rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.menu_list_item_value .avatar_url {
  width: 80rpx;
  height: 80rpx;
  display: flex;
}

.menu_list_item_value .avatar_url.banner {
  width: 160rpx;
}

.menu_list_item_value input {
  width: 100%;
  text-align: right;
  background-color: rgb(230, 230, 230);
  padding: 10rpx 20rpx;
  border-radius: 4px;
}

.menu_list_item_value textarea {
  width: 100%;
  background-color: rgb(230, 230, 230);
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 4px;
}

.menu_list_item.motto {
  align-items: flex-start;
}

.btn_group {
  margin-top: 50rpx;
  padding: 0 20rpx;
}

.btn_group_item {
  background-color: #00b26a;
  color: #fff;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 4px;
}
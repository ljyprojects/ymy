.cover {
  min-height: 92px;
  background-color: rgb(39, 65, 99);
}

.cover image {
  width: 100%;
  height: 360rpx;
  display: block;
}

.user_info_data {
  position: relative;
  padding-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f6f6f6;                                
}

.avatar {
  display: flex;
  align-items: center;
  width: 100%;
  position: absolute;
  padding: 0 30rpx;
  box-sizing: border-box;
  top: -80rpx;
  left: 0;
  z-index: 1;
}

.avatar .user_avatar {
  width: 170rpx;
  height: 170rpx;
  overflow: hidden;
  border-radius: 50%;
}

.avatar .user_avatar image {
  width: 100%;
  height: auto;
  display: block;
}

.user_info_content {
  padding: 100rpx 0 0;
  color: #333;
  background-color: #fff;
}

.user_info_nick_name {
  font-size: 36rpx;
  font-weight: 800;
  padding-left: 30rpx;
}

.fans_page {
  flex: 1;
  display: flex;
  height: 170rpx;
  align-items: flex-end;
  padding: 0 0 20rpx 20rpx;
  box-sizing: border-box;
  justify-content: flex-end;
}

.private_letter {
  font-size: 28rpx;
  text-align: center;
  color: #333;
  width: 140rpx;
  border: 1px solid rgb(117, 117, 117);
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 50rpx;
  line-height: 50rpx;
  margin-right: 40rpx;
}

.subscription {
  font-size: 28rpx;
  text-align: center;
  color: #333;
  width: 200rpx;
  border: 1px solid rgb(117, 117, 117);
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 50rpx;
  line-height: 50rpx;

}

.statistics {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  font-size: 26rpx;
  justify-content: center;
}

.statistics_item {
  padding: 0 20rpx;
  flex: 1;
  text-align: center;
  color: #666;
}

.statistics_item .value {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 10rpx;
  color: #333;
}

.top_tab {
  background-color: #fff;
}

.submit_btn {
  background-color: #fff;
  width: 100rpx;
  height: 100rpx;
  cursor: pointer;
  position: fixed;
  bottom: 140rpx;
  right: 10rpx;
  z-index: 3;
  border-radius: 50%;
  transition: all .3s;

}

.submit_btn.hide {
  right: -100rpx;
}

.submit_btn .submit_img {
  width: 100%;
  height: auto;
  display: block;
}

.default_page {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.default_page text {
  color: #576b95;
  font-weight: bold;
}

.system_video_pannel {
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding-bottom: 60rpx;
  border-bottom: 1px solid #ddd;
}

.system_video_pannel .title {
  margin-bottom: 20rpx;
}

.system_video_pannel video {
  width: 100%;
  display: block;
  border-radius: 4px;
}

.motto {
  word-break: break-all;
  padding: 20rpx 30rpx 0;
  font-size: 24rpx;
  color: #6b6b6b;
}
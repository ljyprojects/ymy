.market_foot_menu {
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.market_foot_menu_list {
  min-width: 100%;
  overflow: scroll;
  display: flex;
  height: 100rpx;
  padding: 10rpx 0;
  box-sizing: border-box;

}

.market_foot_menu_item {
  width: 25vw;
}

.market_foot_menu_item_name {
  text-align: center;
  font-size: 20rpx;
  color: #6b6b6b;
}

.market_foot_menu_item_name.select {
  color: #ff0011;
}

.market_foot_menu_item_icon {
  
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.market_foot_menu_item_icon image {
  width: 100%;
  height: auto;
  display: block;
  margin: 0 auto;
}